{
  "name": "GeForce-NOW",
  "appId": "com.github.AscendXP.${name}",
  "productName": "GeForce NOW",
  "version": "2.1.3-XP1",
  "description": "A Linux desktop web app for GeForce NOW",
  "main": "scripts/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never"
  },
  "build": {
    "asar": false,
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "category": "Games",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "com.github.AscendXP.${name}.desktop"
    ]
  },
  "repository": "https://github.com/AscendXP/gfn-electron-with-hardware-acceleration",
  "keywords": [
    "Electron",
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "author": "AscendXP fork but OG:Hora»õiu Mlendea <io.github.hmlendea.cnzq9@SimpleLogin.fr>",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "discord-rich-presence": "^0.0.8",
    "electron-localshortcut": "^3.2.1"
  }
}
